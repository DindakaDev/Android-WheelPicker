<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_centerInParent="true"/>
    
    <!--<io.itimetraveler.widget.view.WheelView-->
        <!--android:id="@+id/wheel_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="20dp"-->
        <!--android:visibility="gone"-->
        <!--android:background="#ffffff"/>-->

    <io.itimetraveler.widget.picker.TextSingleWheelPicker
        android:id="@+id/text_wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <io.itimetraveler.widget.pickerselector.ChineseCityWheelPicker
        android:id="@+id/wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#ffffff"/>

    <io.itimetraveler.widget.pickerselector.DigitalCipherPicker
        android:id="@+id/digital_cipher_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wheel_picker"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <io.itimetraveler.widget.pickerselector.CountryWheelPicker
        android:id="@+id/country_wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/digital_cipher_picker"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>


</RelativeLayout>
